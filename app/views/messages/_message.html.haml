.chat-main__message-list-board__lists{data: {message: {id: message.id}}}
  .chat-main__message-list-board__lists__list
    .chat-main__message-list-board__lists__list__input-to
      .chat-main__message-list-board__lists__list__input-to--name
        = message.user.name
      .chat-main__message-list-board__lists__list__input-to--date
        = message.created_at.strftime("%Y/%m/%d %H:%M")
    .chat-main__message-list-board__lists__list__message
      - if message.content.present?
        %p.chat-main__message-list-board__lists__list__message__content
          = message.content
      = image_tag message.image.url,class: 'chat-main__message-list-board__lists__list__message__image'if message.image.present?
