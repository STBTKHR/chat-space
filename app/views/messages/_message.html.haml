.chat-main__message-list-board
  .chat-main__message-list-board__lists
    .chat-main__message-list-board__lists__list
      .chat-main__message-list-board__lists__list__input-to
        .chat-main__message-list-board__lists__list__input-to--name
          = message.user.name
        .chat-main__message-list-board__lists__list__input-to--date
          = message.user.created_at.strftime("%Y/%m/%d %H:%M")
    - if message.content.present?
      .chat-main__message-list-board__lists__list__message
        = message.content
      = image_tag message.iage.url, if message.image.present?
